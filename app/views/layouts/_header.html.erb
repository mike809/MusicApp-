<header class="navbar navbar-fixed-top navbar-inverse">  
  <div class="container">
    <button class = "btn btn-info btn-sm navbar-toggle" data-toggle = 
    "collapse" data-target = ".navHeaderCollapse" type="button">
            <span class = "icon-bar"></span>
            <span class = "icon-bar"></span>
            <span class = "icon-bar"></span>
    </button>
    <%= link_to "Socialife", home_path, id: "logo", class: "navbar-brand" %>
    
    <div class = "navbar-collapse collapse navbar-responsive-collapse 
    navHeaderCollapse">
    
      <ul class="nav navbar-nav pull-right">
       <form action="/search" method="post" class="navbar-form pull-left">
         <input type="text" placeholder="Search Here..." 
         style="width:200px" class="form-control" 
         name="search_keywords">
      
         <button type="button" class="btn btn-info btn-sm">
           <span class="glyphicon glyphicon-search"></span>
         </button>
       </form>
       <% if user_signed_in? %>
          <li class="active"><%= link_to "Notifications", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Events <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to "My Events", user_events_url(current_user) %>
              </li>
              <li>
                <%= link_to "Create Event", new_user_event_url(current_user)%>
              </li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-user"></span>
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to "Profile", current_user %>
              </li>
              <li>
                <%= link_to "Settings", edit_user_url(current_user) %>
              </li>
              <li class="divider"></li>
              <li>
                <%= button_to 'Logout', logout_path, :method => :delete%>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Login", login_path %></li>
        <% end %>
        <li><%= link_to "Help", help_path %></li>
      </ul>
    </div>
  </div>
</header>