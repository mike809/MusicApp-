<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Socialize", home_path, id: "logo", class: "navbar-brand" %>
      <nav>
        
        <button class = "navbar-toggle" data-toggle = "collapse" data-target = 
        ".navHeaderCollapse">
                <span class = "icon-bar"></span>
                <span class = "icon-bar"></span>
                <span class = "icon-bar"></span>
        </button>
        
        <div class = "collapse navbar-collapse navHeaderCollapse">
          <ul class="nav pull-right">
          
            <li> 
              <%= form_tag "/search", :id => "formbox" do %>
                <%= text_field_tag :search_keywords, "Search here.." %>
                <%= submit_tag "Find", class: "btn btn-large btn-primary" %>
              <% end %>
            </li>
          
            <% if user_signed_in? %>
              <li><%= link_to "#{0} Notifications", '#' %></li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Events <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "My Events", user_events_url(current_user) %>
                  </li>
                  <li>
                    <%= link_to "Create Event", 
                    new_user_event_url(current_user)%>
                  </li>
                </ul>
              </li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", current_user %></li>
                  <li>
                    <%= link_to "Settings", edit_user_url(current_user) %>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <%= button_to 'Logout', logout_path, :method => :delete%>
                  </li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "Login", login_path %></li>
            <% end %>
            <li><%= link_to "Help", help_path %></li>
          </ul>
        <div>
      </nav>
    </div>
  </div>
</header>