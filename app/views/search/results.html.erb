<% provide(:title, 'Search Results') %>
<h1>Results</h1>

<ul class="users">
  
  <% @events.each do |event| %>
    <li>
      <%= image_tag url_for(:controller => "events",
                            :action => "show_image",
                            :id => event.id), 
                            :size => "175x120" %>
                            
      <%= link_to event.title, user_event_url(event.user_id, event) %>
    </li>
  <% end %>
  <% @users.each do |user| %>
      <li>
        <%= gravatar_for user, size: 52 %>
        <%= link_to user.full_name, user %>
      </li>
  <% end %>
</ul>